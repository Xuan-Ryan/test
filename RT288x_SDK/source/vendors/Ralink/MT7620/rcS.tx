#!/bin/sh
mount -a
mkdir -p /var/run
makedevlinks.sh
cat /etc_ro/motd > /dev/console
nvram_daemon&

init_system start

echo 8388608  > /proc/sys/net/core/rmem_default 
echo 8388608  > /proc/sys/net/core/rmem_max
echo 2000  > /proc/sys/net/core/netdev_max_backlog

echo 5 > /proc/sys/net/ipv4/tcp_keepalive_time
echo 3 > /proc/sys/net/ipv4/tcp_keepalive_intvl
echo 3 > /proc/sys/net/ipv4/tcp_keepalive_probes

#for telnet debugging
QisInit=`nvram_get QisInit`
if [ "$QisInit" = "0" ]; then
	telnetd
fi

#for syslogd
mkdir -p /var/log

#for cpe_app
ln -s /etc_ro/init.d /etc/init.d
ln -s /etc_ro/cron /etc/cron

#  UVC
uvcclient &

#  for ap client
apclient_chkconn.sh &
